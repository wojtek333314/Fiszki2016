<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/FicheButtonBig</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="android:text">@style/RobotoTextViewStyle</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FicheButtonBig">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/FicheButtonBigPadding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FicheButtonNormal" parent="FicheButtonBig">
        <item name="android:padding">@dimen/layout_margin_normal</item>
    </style>
    
</resources>
