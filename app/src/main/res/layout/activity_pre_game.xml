<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="brotherhood.fichesenglish.activities.PreGameActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_menu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView2" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ANG -> PL"
        android:id="@+id/rb_ang_pl"
        android:checked="true"
        android:layout_below="@+id/imageView2"
        android:layout_alignLeft="@+id/rb_pl_ang"
        android:layout_alignStart="@+id/rb_pl_ang" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PL -> ANG"
        android:id="@+id/rb_pl_ang"
        android:checked="false"
        android:layout_below="@+id/rb_ang_pl"
        android:layout_centerHorizontal="true" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_learnNew"
        android:text="Ćwicz nowe słówka"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rb_pl_ang" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bt_repeatFische"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Powtarzaj"
        android:layout_toLeftOf="@+id/bt_learnNew"
        android:layout_toStartOf="@+id/bt_learnNew"
        android:layout_below="@+id/rb_pl_ang" />




</RelativeLayout>
